    <script>
        let currentUserType = 'tenant';
        let currentHostel = '';
        
        function switchUserType(type) {
            currentUserType = type;
            
            // Update toggle buttons
            document.querySelectorAll('.toggle-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Switch views
            if (type === 'tenant') {
                document.getElementById('tenantView').style.display = 'block';
                document.getElementById('ownerView').style.display = 'none';
                
                // Update navigation for tenant
                document.getElementById('nav-icon-1').textContent = '🔍';
                document.getElementById('nav-label-1').textContent = 'Search';
                document.getElementById('nav-icon-2').textContent = '📋';
                document.getElementById('nav-label-2').textContent = 'Bookings';
                document.getElementById('nav-icon-3').textContent = '❤️';
                document.getElementById('nav-label-3').textContent = 'Favorites';
                document.getElementById('nav-icon-4').textContent = '💬';
                document.getElementById('nav-label-4').textContent = 'Chat';
            } else {
                document.getElementById('tenantView').style.display = 'none';
                document.getElementById('ownerView').style.display = 'block';
                
                // Update navigation for owner
                document.getElementById('nav-icon-1').textContent = '🏠';
                document.getElementById('nav-label-1').textContent = 'Hostels';
                document.getElementById('nav-icon-2').textContent = '📊';
                document.getElementById('nav-label-2').textContent = 'Analytics';
                document.getElementById('nav-icon-3').textContent = '💰';
                document.getElementById('nav-label-3').textContent = 'Payments';
                document.getElementById('nav-icon-4').textContent = '📢';
                document.getElementById('nav-label-4').textContent = 'Announce';
            }
        }
        
        function searchHostels() {
            const destination = document.getElementById('destination').value;
            const checkin = document.getElementById('checkin').value;
            const checkout = document.getElementById('checkout').value;
            
            if (!destination) {
                alert('Please enter a destination to search');
                return;
            }
            
            alert(`🔍 Searching hostels in ${destination}\n\n📍 Found 15 hostels matching your criteria\n💰 Price range: ₹5,000 - ₹15,000\n📶 All with WiFi and basic amenities`);
        }
        
        function filterBy(chip, filter) {
            document.querySelectorAll('.filter-chip').forEach(c => c.classList.remove('active'));
            chip.classList.add('active');
            
            const filterMessages = {
                'all': 'Showing all hostels',
                'wifi': 'Showing hostels with WiFi',
                'food': 'Showing hostels with food facility',
                'ac': 'Showing AC hostels',
                'girls': 'Showing girls-only hostels',
                'boys': 'Showing boys-only hostels'
            };
            
            alert(filterMessages[filter]);
        }
        
        function showHostelDetails(hostelName) {
            const hostelDetails = {
                'Green Backpackers': {
                    description: '🏠 Modern hostel in the heart of Koramangala',
                    amenities: ['📶 High-speed WiFi', '🍽️ 3 meals included', '❄️ AC rooms', '🧺 Laundry service', '🔒 24/7 Security'],
                    rooms: ['Single occupancy: ₹12,000/month', 'Double sharing: ₹8,500/month', 'Triple sharing: ₹6,500/month'],
                    contact: '📞 +91 98765 43210\n📧 owner@greenbackpackers.com',
                    rules: ['No smoking inside', 'Visitors allowed till 10 PM', 'Monthly rent in advance']
                }
            };
            
            const details = hostelDetails[hostelName] || hostelDetails['Green Backpackers'];
            
            document.getElementById('hostelDetailsTitle').textContent = hostelName;
            document.getElementById('hostelDetailsContent').innerHTML = `
                <div style="margin-bottom: 16px;">
                    <strong>About:</strong><br>
                    ${details.description}
                </div>
                <div style="margin-bottom: 16px;">
                    <strong>Amenities:</strong><br>
                    ${details.amenities.join('<br>')}
                </div>
                <div style="margin-bottom: 16px;">
                    <strong>Room Types & Pricing:</strong><br>
                    ${details.rooms.join('<br>')}
                </div>
                <div style="margin-bottom: 16px;">
                    <strong>Contact:</strong><br>
                    ${details.contact}
                </div>
                <div style="margin-bottom: 16px;">
                    <strong>House Rules:</strong><br>
                    ${details.rules.join('<br>')}
                </div>
            `;
            
            document.getElementById('hostelDetailsModal').style.display = 'block';
        }
        
        function showOnMap(hostelName) {
            alert(`📍 Opening ${hostelName} location on Google Maps\n\n🗺️ Interactive map with:\n• Exact location\n• Nearby amenities\n• Public transport\n• Distance from colleges/offices`);
        }
        
        function toggleFavorite(btn) {
            if (btn.classList.contains('active')) {
                btn.classList.remove('active');
                btn.textContent = '♡';
                alert('❤️ Removed from favorites');
            } else {
                btn.classList.add('active');
                btn.textContent = '♥';
                alert('❤️ Added to favorites');
            }
        }
        
        function bookHostel(hostelName) {
            currentHostel = hostelName;
            document.getElementById('bookingModal').style.display = 'block';
        }
        
        function confirmBooking() {
            const name = document.querySelector('#bookingModal input[type="text"]').value;
            const email = document.querySelector('#bookingModal input[type="email"]').value;
            const phone = document.querySelector('#bookingModal input[type="tel"]').value;
            
            if (!name || !email || !phone) {
                alert('Please fill in all required fields');
                return;
            }
            
            alert(`✅ Booking Request Sent!\n\n🏠 Hostel: ${currentHostel}\n👤 Name: ${name}\n📧 Email: ${email}\n📱 Phone: ${phone}\n\n📋 Booking ID: HH${Math.floor(Math.random() * 10000)}\n\n💬 The hostel owner will contact you within 24 hours to confirm availability and arrange a visit.`);
            closeModal();
        }
        
        function contactOwner() {
            alert('💬 Opening chat with hostel owner\n\n📱 You can now:\n• Send messages\n• Share documents\n• Schedule visits\n• Ask questions about facilities');
            closeModal();
        }
        
        // Owner Functions
        function addNewHostel() {
            document.getElementById('addHostelModal').style.display = 'block';
        }
        
        function saveHostel() {
            alert('🏠 New hostel added successfully!\n\n📸 Next steps:\n• Upload photos\n• Set availability calendar\n• Configure pricing\n• Publish listing');
            closeModal();
        }
        
        function manageHostel(hostelName) {
            alert(`🏠 Managing ${hostelName}\n\n📊 Quick Stats:\n• 18/20 rooms occupied\n• ₹1.53L monthly revenue\n• 4.8⭐ rating\n• 3 pending inquiries\n\n⚙️ Management options:\n• View tenant details\n• Update pricing\n• Manage bookings\n• Send announcements`);
        }
        
        function editHostel(hostelName) {
            alert(`✏️ Editing ${hostelName}\n\n📝 You can update:\n• Photos and description\n• Pricing and availability\n• Amenities and rules\n• Contact information`);
        }
        
        function replyToInquiry(tenantName) {
            alert(`💬 Replying to ${tenantName}\n\n📱 Quick reply options:\n• "Yes, rooms available"\n• "Schedule a visit"\n• "Send pricing details"\n• "Custom message"`);
        }
        
        function callTenant(tenantName) {
            alert(`📞 Calling ${tenantName}...\n\n☎️ Features:\n• Direct call from app\n• Call history tracking\n• Follow-up reminders`);
        }
        
        function showProfile() {
            if (currentUserType === 'tenant') {
                alert('👤 Tenant Profile\n\n📋 Your Details:\n• Name: Alex Johnson\n• Email: alex@example.com\n• Phone: +91 98765 43210\n• Verified: ✅\n\n📊 Activity:\n• 3 bookings completed\n• 5 reviews written\n• Member since Jan 2024');
            } else {
                alert('🏢 Owner Profile\n\n📋 Your Details:\n• Business: HostelHub Properties\n• Email: owner@hostelhub.com\n• Phone: +91 98765 43210\n• Verified: ✅\n\n📊 Business Stats:\n• 3 active hostels\n• 47 total tenants\n• ₹2.1L monthly revenue\n• 4.7⭐ average rating');
            }
        }
        
        function login() {
            alert('✅ Login successful!\n\n🎉 Welcome back to HostelHub\n📱 All your data synced\n🔔 You have 2 new notifications');
            closeModal();
        }
        
        function loginWithGoogle() {
            alert('🔍 Google Sign-In\n\n✅ Quick and secure login\n📱 Auto-sync your preferences\n🔒 Privacy protected');
            closeModal();
        }
        
        function loginWithOTP() {
            alert('📱 OTP Login\n\n📲 Enter your phone number\n🔢 We\'ll send a 6-digit code\n⚡ Quick verification');
        }
        
        function showRegister() {
            alert('✨ Create Account\n\n📝 Registration options:\n• Email & Password\n• Phone & OTP\n• Google Sign-Up\n\n🎁 Welcome bonus: ₹500 off first booking!');
        }
        
        function switchTab(tabElement, tabName) {
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            tabElement.classList.add('active');
            
            if (currentUserType === 'tenant') {
                const tenantMessages = {
                    'search': 'Search view active',
                    'bookings': '📋 Your Bookings:\n\n🏠 Green Backpackers\n📅 March 15 - June 15\n💰 ₹8,500/month\n📍 Status: Confirmed\n\n🏢 Urban Nomads\n📅 July 1 - Dec 31\n💰 ₹12,000/month\n📍 Status: Pending',
                    'favorites': '❤️ Your Favorites:\n\n🏠 Green Backpackers ⭐4.8\n🌅 Sunset Hostel ⭐4.9\n⛰️ Mountain Lodge ⭐4.7\n\n💡 Get notified when prices drop!',
                    'chat': '💬 Your Conversations:\n\n🏠 Green Backpackers Owner\n💬 "Room available from next month"\n⏰ 2 hours ago\n\n🏢 Urban Nomads Owner\n💬 "Thanks for your interest"\n⏰ 1 day ago'
                };
                
                if (tabName !== 'search') {
                    setTimeout(() => alert(tenantMessages[tabName]), 100);
                }
            } else {
                const ownerMessages = {
                    'hostels': 'Hostels view active',
                    'analytics': '📊 Analytics Dashboard:\n\n📈 This Month:\n• Revenue: ₹2.1L (+15%)\n• Occupancy: 94% (+8%)\n• New bookings: 12\n• Reviews: 4.7⭐ avg\n\n📅 Trends:\n• Peak season approaching\n• High demand for AC rooms',
                    'payments': '💰 Payment Management:\n\n💳 This Month:\n• Collected: ₹1.95L\n• Pending: ₹15K\n• Overdue: ₹5K\n\n📊 Payment Methods:\n• Online: 85%\n• Cash: 15%\n\n🔔 3 payment reminders sent',
                    'announce': '📢 Announcements:\n\n📝 Recent:\n• "WiFi upgrade completed"\n• "New laundry timings"\n• "Rent due reminder"\n\n✨ Create new:\n• Maintenance notice\n• Event announcement\n• Policy update'
                };
                
                if (tabName !== 'hostels') {
                    setTimeout(() => alert(ownerMessages[tabName]), 100);
                }
            }
        }
        
        function closeModal() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.style.display = 'none';
            });
        }
        
        // Set default dates
        const today = new Date();
        const tomorrow = new Date(today);
        tomorrow.setDate(tomorrow.getDate() + 1);
        const dayAfter = new Date(today);
        dayAfter.setDate(dayAfter.getDate() + 3);
        
        document.getElementById('checkin').value = tomorrow.toISOString().split('T')[0];
        document.getElementById('checkout').value = dayAfter.toISOString().split('T')[0];
        
        // Close modal when clicking outside
        window.onclick = function(event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        }
        
        // Show login modal on first visit
        setTimeout(() => {
            document.getElementById('loginModal').style.display = 'block';
        }, 1000);
    </script>
