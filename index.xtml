    <!-- Hostel Details Modal -->
    <div class="modal" id="hostelDetailsModal">
        <div class="modal-content">
            <div class="modal-title" id="hostelDetailsTitle">Hostel Details</div>
            <div id="hostelDetailsContent">
                <!-- Content will be populated dynamically -->
            </div>
            <div class="modal-buttons">
                <button class="btn-secondary" onclick="closeModal()">Close</button>
                <button class="btn-primary" onclick="contactOwner()">💬 Contact Owner</button>
            </div>
        </div>
    </div>
    
    <!-- Add Hostel Modal -->
    <div class="modal" id="addHostelModal">
        <div class="modal-content">
            <div class="modal-title">Add New Hostel</div>
            <div class="form-group">
                <label>Hostel Name</label>
                <input type="text" placeholder="Enter hostel name">
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea placeholder="Complete address" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label>Monthly Rent</label>
                <input type="number" placeholder="Enter rent amount">
            </div>
            <div class="form-group">
                <label>Total Rooms</label>
                <input type="number" placeholder="Number of rooms">
            </div>
            <div class="form-group">
                <label>Amenities</label>
                <div style="display: flex; flex-wrap: wrap; gap: 8px; margin-top: 8px;">
                    <label style="display: flex; align-items: center; gap: 4px;">
                        <input type="checkbox"> WiFi
                    </label>
                    <label style="display: flex; align-items: center; gap: 4px;">
                        <input type="checkbox"> Food
                    </label>
                    <label style="display: flex; align-items: center; gap: 4px;">
                        <input type="checkbox"> AC
                    </label>
                    <label style="display: flex; align-items: center; gap: 4px;">
                        <input type="checkbox"> Laundry
                    </label>
                </div>
            </div>
